{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "WebsiteConfiguration",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "StartUrl": {
      "type": "string"
    },
    "MaxLevel": {
      "type": "integer",
      "format": "int32"
    },
    "MaxPages": {
      "type": "integer",
      "format": "int32"
    },
    "Pages": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "Name": {
            "type": "string"
          },
          "TagName": {
            "type": "string"
          },
          "Description": {
            "type": "string"
          },
          "IncludeHtml": {
            "type": "boolean"
          },
          "IncludeText": {
            "type": "boolean"
          },
          "NormalizeWhitespaces": {
            "type": "boolean"
          },
          "RemoveHtmlTags": {
            "type": "boolean"
          },
          "RemoveHtmlAttributes": {
            "type": "boolean"
          },
          "UrlContains": {
            "type": [
              "null",
              "string"
            ]
          },
          "ContainsText": {
            "type": [
              "null",
              "string"
            ]
          },
          "ContainsXpath": {
            "type": [
              "null",
              "string"
            ]
          },
          "ContentXPath": {
            "type": [
              "null",
              "string"
            ]
          },
          "DisabledTags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "Features": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "Name": {
                  "type": "string"
                },
                "TagName": {
                  "type": "string"
                },
                "NameRegex": {
                  "type": [
                    "null",
                    "string"
                  ]
                },
                "ValueRegex": {
                  "type": [
                    "null",
                    "string"
                  ]
                },
                "NameXpath": {
                  "type": [
                    "null",
                    "string"
                  ]
                },
                "ValueXpath": {
                  "type": [
                    "null",
                    "string"
                  ]
                },
                "IncludeHtml": {
                  "type": "boolean"
                },
                "IncludeText": {
                  "type": "boolean"
                },
                "NormalizeWhitespaces": {
                  "type": "boolean"
                },
                "RemoveHtmlTags": {
                  "type": "boolean"
                },
                "RemoveHtmlAttributes": {
                  "type": "boolean"
                }
              }
            }
          },
          "Files": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false
            }
          }
        }
      }
    },
    "UrlsStartWith": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}